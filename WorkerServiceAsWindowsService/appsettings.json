{
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "../log/Csob.Project.WindowsService.{Date}.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {UserNameWithDomain} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Csob.Project.WindowsService"
    }
  },
  "comment": "If you want run job only once, CronTrigger have to be empty string",
  "QuartzJobsConfig": {
    "Jobs": [
      {
        "JobName": "Job1",
        "CronTrigger": "0 45 14 ? * *",
        "CallAfterStart": "true",
        "CustomValues": {}
      },
      {
        "JobName": "Job2",
        "CronTrigger": "0/5 * * ? * *",
        "CallAfterStart": "true",
        "CustomValues": {
          "DeleteIntervalYear": 20
        }
      }
    ]
  }

}
